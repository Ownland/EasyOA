<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/main_relativelayout_header" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="40dip"
	  	android:background="@drawable/widget_head_bg">
  	
	    <ImageView
	    	android:id="@+id/main_head_logo"
	  		android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="5.0dip"
			android:src="@drawable/frame_logo_news"/>
	    
	    <TextView 
	        android:id="@+id/main_head_title"
	        style="@style/main_head_title"
			android:layout_toRightOf="@id/main_head_logo"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5.0dip"
			android:text="日历"/>
	</RelativeLayout>
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="35.0dip"
		android:orientation="horizontal" 
		android:gravity="center_vertical">
     	<Button 
     		android:id="@+id/frame_btn_calendar_todo"
     		style="@style/frame_button"
         	android:text="@string/frame_title_calendar_todo"/>
     	<ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@drawable/frame_button_cutline" android:contentDescription="@string/frame_title_email_split"/>
     	<Button 
     		android:id="@+id/frame_btn_calendar_done"
     		style="@style/frame_button"
         	android:text="@string/frame_title_calendar_done"/>
     	<ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@drawable/frame_button_cutline" android:contentDescription="@string/frame_title_email_split"/>
     	<Button 
     		android:id="@+id/frame_btn_calendar_new"
     		style="@style/frame_button"
         	android:text="@string/frame_title_calendar_new"/>
    </LinearLayout>
    
	<FrameLayout
	    android:id="@+id/search_frame_calendar"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:gravity="center_vertical"
	   	android:paddingLeft="5dip"
   		android:paddingRight="5dip"
	   	android:orientation="horizontal"
	   	android:background="@drawable/widget_head_bg">
		<EditText
	        android:id="@+id/search_editer_calendar"
	        android:layout_width="fill_parent"
	        android:layout_height="30dip"
	        android:layout_gravity="left|center"
	        android:layout_marginRight="36dip"
	        android:singleLine="true"
	        android:focusable="true" 
	        android:focusableInTouchMode="true"
	        android:imeOptions="actionSearch"
	        android:background="@drawable/edit_search_bg"
	        android:hint="输入搜索内容"/>			
	   	<Button 
	   		android:id="@+id/search_btn_calendar"
		   	android:layout_width="wrap_content" 
	      	android:layout_height="30dip" 
	      	android:layout_gravity="right|center"
	      	android:background="@drawable/btn_search_bg"/>
	</FrameLayout>
	<ListView
	  	android:id="@+id/frame_listview_calendars"
	    style="@style/widget_listview"/>
	<ScrollView
	    android:id="@+id/calendar_scroll"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:scrollbars="vertical"
	    android:fadingEdge="none"
	    android:visibility="gone">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
	    <LinearLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="2.0dip"
	    	android:layout_marginTop="2.0dip"
	    	android:orientation="vertical">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="事件"
		        android:textSize="15sp"
		        android:textColor="@color/black"/>
		    <EditText
		        android:id="@+id/email_new_reciever"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:singleLine="true"
		        android:hint="请输入事件名称"/>
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="2.0dip"
	        android:layout_marginTop="2.0dip"
	        android:orientation="vertical">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:text="由"
	            android:textColor="@color/black"
	            android:textSize="15sp" />
	        <LinearLayout 
	            android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	       	 	android:layout_marginLeft="2.0dip"
	       		android:layout_marginTop="2.0dip" >
	       		<Button 
			   		android:id="@+id/date_btn_from"
				   	android:layout_width="wrap_content" 
			      	android:layout_height="30dip" 
			      	android:layout_gravity="right|center"/>
	        	<Button 
			   		android:id="@+id/time_btn_from"
				   	android:layout_width="wrap_content" 
			      	android:layout_height="30dip" 
			      	android:layout_gravity="right|center"/>
	        </LinearLayout>
	    </LinearLayout>
	     <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="2.0dip"
	        android:layout_marginTop="2.0dip"
	        android:orientation="vertical">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:text="至"
	            android:textColor="@color/black"
	            android:textSize="15sp" />
	        <LinearLayout 
	            android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	       	 	android:layout_marginLeft="2.0dip"
	       		android:layout_marginTop="2.0dip" >
	       		<Button 
			   		android:id="@+id/date_btn_to"
				   	android:layout_width="wrap_content" 
			      	android:layout_height="30dip" 
			      	android:layout_gravity="right|center"/>
	        	<Button 
			   		android:id="@+id/time_btn_to"
				   	android:layout_width="wrap_content" 
			      	android:layout_height="30dip" 
			      	android:layout_gravity="right|center"/>
	        </LinearLayout>
	    </LinearLayout>
	    
		<LinearLayout 
		    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="2.0dip"
	    	android:layout_marginTop="2.0dip">
	    <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:text="内    容："
	            android:textColor="@color/black"
	            android:textSize="15sp" />
		</LinearLayout>
	    <EditText
	        android:id="@+id/email_new_content"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="2.0dip"
	        android:layout_weight="1"
	        android:lines="8"
	        android:autoLink="web"
	        android:gravity="top"
	        android:hint="请输入邮件内容"/>
         
	    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="2.0dip"
	    android:gravity="center">
	    <Button
		    	android:id="@+id/email_send"
		        android:layout_width="100dip"
		    	android:layout_height="45dip"
		    	android:layout_marginTop="15dip"
		    	android:layout_marginBottom="30dip"
		    	android:gravity="center"
		    	android:background="@drawable/email_btn_selector" 
		    	android:textSize="@dimen/text_size_18"
		        android:text="发送"/>
	    <Button
		    	android:id="@+id/email_cancel"
		        android:layout_width="100dip"
		    	android:layout_height="45dip"
		    	android:layout_marginTop="15dip"
		    	android:layout_marginBottom="30dip"
		    	android:layout_marginLeft="20dip"
		    	android:gravity="center"
		    	android:background="@drawable/email_btn_selector" 
		    	android:textSize="@dimen/text_size_18"
		        android:text="取消"/>
	</LinearLayout>
	</LinearLayout>
	
	</ScrollView>
</LinearLayout>